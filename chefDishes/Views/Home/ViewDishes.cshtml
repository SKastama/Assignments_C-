@{
    @using chefDishes.Models
    @model List<Dish>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chefs 'N Dishes</title>
</head>
<body>
    <h1><a href="/">Chefs</a> | Dishes</h1>
    <a href="/dishes/new">Add a Dish</a>
    <h3>Yum, take a look at our tasty dishes!</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
        @foreach(var dish in Model)
        {
            <tr>
                <td>@dish.DishName</td>
                <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                <td>@dish.Taste</td>
                <td>@dish.Calories</td>
            </tr>
        }
    </table>
</body>
</html>