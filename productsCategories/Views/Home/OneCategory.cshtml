@{
    @using productsCategories.Models
    @model Association;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products and Categories</title>
</head>
<body>
    <h1><a href="/">Products</a> | <a href="/categories">Categories</a></h1>
    <div>
        <h2>Products: </h2>
        @foreach(Association asso in ViewBag.inCategory.Associations)
        {
            <p>@asso.Product.ProductName</p>
        }
    </div>
    <div>
        <form asp-action="SubmitAddProduct" asp-controller="Home" method="post">
            <span asp-validation-for="ProductId"></span>
            <label>Product</label>
            <select asp-for="ProductId">
                @foreach(Product pdt in ViewBag.notInCategory)
                {
                    <option value="@pdt.ProductId">@pdt.ProductName</option>
                }
            </select>
            <input type="hidden" value="@ViewBag.categoryId"/>
            <input value="Create" type="submit">  
        </form>
    </div>
</body>
</html>