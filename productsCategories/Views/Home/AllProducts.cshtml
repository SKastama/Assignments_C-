@{
    @using productsCategories.Models
    @model Product;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products and Categories</title>
</head>
<body>
    <h1>Products | <a href="/categories">Categories</a></h1>
    <div>
        <h2>New Product</h2>
        <form asp-action="SubmitProduct" asp-controller="Home" method="post">
            <div>
                <span asp-validation-for="ProductName"></span>
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName">    
            </div>
            <div>
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <input asp-for="Description">   
            </div>
            <div>
                <span asp-validation-for="Price"></span>
                <label asp-for="Price"></label>
                <input asp-for="Price">   
            </div>
            <input value="Create" type="submit">  
        </form>
    </div>
    <div>
        <h2>Existing Products</h2>
        @foreach(var product in ViewBag.existingProducts)
        {
            <div>
                <a href="/products/@product.ProductId">@product.ProductName</a>
            </div>
        }
    </div>
</body>
</html>